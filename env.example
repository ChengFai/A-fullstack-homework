# 数据库配置
POSTGRES_DB=expense_tracker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# 后端配置
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@postgres:5432/expense_tracker
SECRET_KEY=your_secret_key_here_change_this_in_production
DEBUG=false
LOG_LEVEL=WARNING
WORKERS=4

# 前端配置
REACT_APP_API_URL=http://localhost/api
REACT_APP_API_TIMEOUT=10000

# Redis配置（可选）
REDIS_PASSWORD=redis_password_here
REDIS_URL=redis://:redis_password_here@redis:6379/0

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# 监控配置（可选）
ENABLE_METRICS=true
METRICS_PORT=9090

# 安全配置
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
